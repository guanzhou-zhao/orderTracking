{{> navbar}}
<div class="container" >
  {{flash}}

  <ul class="nav nav-tabs nav-justified mt-4">
    <li role="presentation" class="active"><a href="#">添加订单</a></li>
    <li role="presentation"><a href="#">搜索订单</a></li>
  </ul>
  <form  action="order" method="POST" class="form-inline mt-4">
    <div class="form-group">
      <label for="shopname">店铺名</label>
      <input name="shopname" type="text" class="form-control" id="shopname">
    </div>
    <div class="form-group">
      <label for="keyword">关键词</label>
      <input type="text" name="keyword" class="form-control" id="keyword">
    </div>
    <div class="form-group">
      <label for="price">价格</label>
      <input type="number" name="price" id="price" min="0" value="0" step="any">
    </div>
    <div class="form-group">
      <label for="ordernum">订单号</label>
      <input type="text" name="ordernum" class="form-control" id="ordernum">
    </div>
    <button type="submit" class="btn btn-default">添加</button>
  </form>
  <table class="table table-hover mt-4">
    <tr>
      <th>店铺名</th>
      <th>关键词</th>
      <th>价格</th>
      <th>订单号</th>
      <th>录入日期</th>
      {{#if isAdmin}}
        <th>录入者</th>
      {{/if}}
      <th>操作</th>
    </tr>
      {{#each orders}}
      <tr>
        <td>{{shopname}}</td>
        <td>{{this.keyword}}</td>
        <td>{{this.price}}</td>
        <td>{{this.ordernum}}</td>
        <td>{{this.created_at}}</td>
        {{#if ../isAdmin}}
          <td>{{this.username}}</td>
        {{/if}}
        <td>
          <a href="#" class="edit_order" c-data={{}}>编辑</a>
          <a href="#" class="delete_order" c-data="{{id}}">删除</a>
        </td>
      </tr>
      {{/each}}
  </table>
</div>
